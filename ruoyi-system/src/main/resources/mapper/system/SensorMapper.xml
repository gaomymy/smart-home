<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.SensorMapper">
    
    <resultMap type="Sensor" id="SensorResult">
        <result property="sensorId"    column="sensor_id"    />
        <result property="roomId"    column="room_id"    />
        <result property="type"    column="type"    />
        <result property="measure"    column="measure"    />
        <result property="startTime"    column="start_time"    />
    </resultMap>

    <sql id="selectSensorVo">
        select sensor_id, room_id, type, measure, start_time from sensor
    </sql>

    <select id="selectSensorList" parameterType="Sensor" resultMap="SensorResult">
        <include refid="selectSensorVo"/>
        <where>  
            <if test="roomId != null "> and room_id = #{roomId}</if>
            <if test="type != null  and type != ''"> and type = #{type}</if>
            <if test="measure != null "> and measure = #{measure}</if>
            <if test="startTime != null "> and start_time = #{startTime}</if>
        </where>
    </select>
    
    <select id="selectSensorBySensorId" parameterType="Long" resultMap="SensorResult">
        <include refid="selectSensorVo"/>
        where sensor_id = #{sensorId}
    </select>

    <insert id="insertSensor" parameterType="Sensor">
        insert into sensor
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="sensorId != null">sensor_id,</if>
            <if test="roomId != null">room_id,</if>
            <if test="type != null">type,</if>
            <if test="measure != null">measure,</if>
            <if test="startTime != null">start_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="sensorId != null">#{sensorId},</if>
            <if test="roomId != null">#{roomId},</if>
            <if test="type != null">#{type},</if>
            <if test="measure != null">#{measure},</if>
            <if test="startTime != null">#{startTime},</if>
         </trim>
    </insert>

    <update id="updateSensor" parameterType="Sensor">
        update sensor
        <trim prefix="SET" suffixOverrides=",">
            <if test="roomId != null">room_id = #{roomId},</if>
            <if test="type != null">type = #{type},</if>
            <if test="measure != null">measure = #{measure},</if>
            <if test="startTime != null">start_time = #{startTime},</if>
        </trim>
        where sensor_id = #{sensorId}
    </update>

    <delete id="deleteSensorBySensorId" parameterType="Long">
        delete from sensor where sensor_id = #{sensorId}
    </delete>

    <delete id="deleteSensorBySensorIds" parameterType="String">
        delete from sensor where sensor_id in 
        <foreach item="sensorId" collection="array" open="(" separator="," close=")">
            #{sensorId}
        </foreach>
    </delete>
</mapper>