<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.ConnectionMapper">

    <resultMap type="Connection" id="ConnectionResult">
        <result property="sensorId"    column="sensor_id"    />
        <result property="deviceId"    column="device_id"    />
        <result property="serialNumber"    column="serial_number"    />
        <result property="function1"    column="function1"    />
        <result property="id"    column="id"    />
    </resultMap>

    <sql id="selectConnectionVo">
        select sensor_id, device_id, serial_number, function1, id from connection
    </sql>

    <select id="selectConnectionList" parameterType="Connection" resultMap="ConnectionResult">
        <include refid="selectConnectionVo"/>
        <where>
            <if test="sensorId != null "> and sensor_id = #{sensorId}</if>
            <if test="deviceId != null "> and device_id = #{deviceId}</if>
            <if test="serialNumber != null "> and serial_number = #{serialNumber}</if>
            <if test="function1 != null  and function1 != ''"> and function1 = #{function1}</if>
        </where>
    </select>

    <select id="selectConnectionById" parameterType="Long" resultMap="ConnectionResult">
        <include refid="selectConnectionVo"/>
        where id = #{id}
    </select>

    <insert id="insertConnection" parameterType="Connection" useGeneratedKeys="true" keyProperty="id">
        insert into connection
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="sensorId != null">sensor_id,</if>
            <if test="deviceId != null">device_id,</if>
            <if test="serialNumber != null">serial_number,</if>
            <if test="function1 != null">function1,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="sensorId != null">#{sensorId},</if>
            <if test="deviceId != null">#{deviceId},</if>
            <if test="serialNumber != null">#{serialNumber},</if>
            <if test="function1 != null">#{function1},</if>
        </trim>
    </insert>

    <update id="updateConnection" parameterType="Connection">
        update connection
        <trim prefix="SET" suffixOverrides=",">
            <if test="sensorId != null">sensor_id = #{sensorId},</if>
            <if test="deviceId != null">device_id = #{deviceId},</if>
            <if test="serialNumber != null">serial_number = #{serialNumber},</if>
            <if test="function1 != null">function1 = #{function1},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteConnectionById" parameterType="Long">
        delete from connection where id = #{id}
    </delete>

    <delete id="deleteConnectionByIds" parameterType="String">
        delete from connection where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
