<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.TbDeviceHistoryMapper">

    <resultMap type="TbDeviceHistory" id="TbDeviceHistoryResult">
        <result property="id"    column="id"    />
        <result property="deviceId"    column="device_id"    />
        <result property="updateTime"    column="update_time"    />
        <result property="temperature"    column="temperature"    />
        <result property="humidity"    column="humidity"    />
        <result property="pressure"    column="pressure"    />
        <result property="status"    column="status"    />
    </resultMap>

    <sql id="selectTbDeviceHistoryVo">
        select id, device_id, update_time, temperature, humidity, pressure, status from tb_device_history
    </sql>

    <select id="selectTbDeviceHistoryList" parameterType="TbDeviceHistory" resultMap="TbDeviceHistoryResult">
        <include refid="selectTbDeviceHistoryVo"/>
        <where>
            <if test="deviceId != null "> and device_id = #{deviceId}</if>
            <if test="temperature != null  and temperature != ''"> and temperature = #{temperature}</if>
            <if test="humidity != null  and humidity != ''"> and humidity = #{humidity}</if>
            <if test="pressure != null  and pressure != ''"> and pressure = #{pressure}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>

    <select id="selectTbDeviceHistoryById" parameterType="Long" resultMap="TbDeviceHistoryResult">
        <include refid="selectTbDeviceHistoryVo"/>
        where id = #{id}
    </select>

    <insert id="insertTbDeviceHistory" parameterType="TbDeviceHistory" useGeneratedKeys="true" keyProperty="id">
        insert into tb_device_history
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="deviceId != null">device_id,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="temperature != null">temperature,</if>
            <if test="humidity != null">humidity,</if>
            <if test="pressure != null">pressure,</if>
            <if test="status != null">status,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="deviceId != null">#{deviceId},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="temperature != null">#{temperature},</if>
            <if test="humidity != null">#{humidity},</if>
            <if test="pressure != null">#{pressure},</if>
            <if test="status != null">#{status},</if>
         </trim>
    </insert>

    <update id="updateTbDeviceHistory" parameterType="TbDeviceHistory">
        update tb_device_history
        <trim prefix="SET" suffixOverrides=",">
            <if test="deviceId != null">device_id = #{deviceId},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="temperature != null">temperature = #{temperature},</if>
            <if test="humidity != null">humidity = #{humidity},</if>
            <if test="pressure != null">pressure = #{pressure},</if>
            <if test="status != null">status = #{status},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteTbDeviceHistoryById" parameterType="Long">
        delete from tb_device_history where id = #{id}
    </delete>

    <delete id="deleteTbDeviceHistoryByIds" parameterType="String">
        delete from tb_device_history where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <select id="getDeviceTemperature" parameterType="Long" resultMap="TbDeviceHistoryResult">
        select update_time,temperature  from tb_device_history where temperature!='' ORDER BY update_time asc
    </select>


    <select id="getDeviceHumidity" parameterType="Long" resultMap="TbDeviceHistoryResult">
        select update_time,humidity  from tb_device_history  where humidity!='' ORDER BY update_time asc
    </select>
</mapper>
